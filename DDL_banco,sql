CREATE TABLE IF NOT EXISTS ATENDENTES (
	ID_ATENDENTE INTEGER PRIMARY KEY AUTOINCREMENT,
	NOME TEXT(50)
);

CREATE TABLE LEITOS (
	ID_LEITO INTEGER PRIMARY KEY AUTOINCREMENT,
	NOME_LEITO TEXT(50),
	ID_UN_INTERNACAO INTEGER,
	CONSTRAINT LEITOS_FK FOREIGN KEY (ID_UN_INTERNACAO) REFERENCES UNIDADES_INTERNACAO(ID_UN_INTERNACAO)
);

CREATE TABLE UNIDADES_INTERNACAO (
	ID_UN_INTERNACAO INTEGER PRIMARY KEY AUTOINCREMENT,
	NOME_UN_INTERNACAO TEXT
);

CREATE TABLE PACIENTES (
	ID_PACIENTE INTEGER PRIMARY KEY,
	NOME_PACIENTE INTEGER
);

CREATE TABLE ATENDIMENTO (
	ID_ATENDIMENTO INTEGER PRIMARY KEY,
	ID_PACIENTE INTEGER,
	CONVENIO TEXT,
	DT_ATENDIMENTO TEXT,
	CONSTRAINT ATENDIMENTO_FK FOREIGN KEY (ID_PACIENTE) REFERENCES PACIENTES(ID_PACIENTE)
);

CREATE TABLE AGENDA (
	ID INTEGER PRIMARY KEY AUTOINCREMENT,
	ID_ATENDENTE INTEGER,
	ID_LEITO INTEGER,
	ID_ATENDIMENTO INTEGER,
	CONSTRAINT AGENDA_FK_1 FOREIGN KEY (ID_ATENDENTE) REFERENCES ATENDENTES(ID_ATENDENTE),
	CONSTRAINT AGENDA_FK_2 FOREIGN KEY (ID_LEITO) REFERENCES LEITOS(ID_LEITO),
	CONSTRAINT AGENDA_FK FOREIGN KEY (ID_ATENDIMENTO) REFERENCES ATENDIMENTO(ID_ATENDIMENTO)
);
